extends layout

block content 

  h1=title

    // action remained empty because we want to send this post request to the same url on which we are currently residing
  form(action="", method="POST") 
    div.form-group
      label(for="name") Genre:
      input#name.form-control(type="text" placeholder='Fantasy, Sci-Fi etc' name="name" value=(undefined===genre?'':genre.name))
    button.btn.btn-primary(type="submit") Submit


  if errors
    ul
      for error in errors
        li  #{error.msg}
    