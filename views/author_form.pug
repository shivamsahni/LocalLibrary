extends layout

block content

  h1= title

  form(action="", method="post")
    .form-group
      label(for='first_name') First Name:
      input#first_name.form-control(type="text" name="first_name" required='true' value=(undefined===author?'':author.first_name))
      label(for='family_name') Family Name:
      input#family_name.form-control(type="text" name='family_name' required='true' value=(undefined===author?'':author.family_name))
    .form-group
      label(for='date_of_birth') Date Of Birth:
      input#date_of_birth.form-control(type="date" placeholder='yyyy-mm-dd' name='date_of_birth' value=(undefined===author?'':moment(author.date_of_birth).format('YYYY-MM-DD')))
      label(for='date_of_death') Date Of Death:
      input#date_of_death.form-control(type="date" placeholder='yyyy--mm-dd' name='date_of_death' value=(undefined===author?'':moment(author.date_of_death).format('YYYY-MM-DD')))
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg