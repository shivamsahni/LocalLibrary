extends layout

block content

    h1= title

    p #[strong Title:] 
      a(href=bookinstance_detail.book.url) #{bookinstance_detail.book.title}
    p #[strong Imprint:] #{bookinstance_detail.imprint}

    p #[strong Status:] 
      if(bookinstance_detail.status=='Available')
        span.text-success #{bookinstance_detail.status}
      else if(bookinstance_detail.status=='Maintenance')
        span.text-danger #{bookinstance_detail.status}
      else
        span.text-warning #{bookinstance_detail.status}

    if bookinstance_detail.status!='Available'
      p #[strong Due Back:] #{bookinstance_detail.due_back_formatted}
    
    hr
    p
    a(href=bookinstance_detail.url+'/delete') Delete BookInstance
    p
    a(href=bookinstance_detail.url+'/update') Update BookInstance
