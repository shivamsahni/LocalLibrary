extends layout

block content

    h1 Author: #{title}

    p #[strong LifeSpan:] #{author.date_of_birth_formatted} - #{author.date_of_death_formatted}

    div(style='margin-left:20px;margin-top:20px')

    h4 Books
    
    dl
      each val in book
        dt 
          a(href=val.url) #{val.title}
        dd #{val.summary}

      else
        p This author has no books.
    hr
    p
        a(href=author.url+'/delete') Delete author 
    p
        a(href=author.url+'/update') Update author